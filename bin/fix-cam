#!/bin/sh
v4l2-ctl -d /dev/video0 --set-ctrl=exposure_auto=1
v4l2-ctl -d /dev/video0 --set-ctrl=focus_auto=0
v4l2-ctl -d /dev/video0 --set-ctrl=zoom_absolute=120
v4l2-ctl -d /dev/video0 --set-ctrl=pan_absolute=36000
v4l2-ctl -d /dev/video0 --set-ctrl=tilt_absolute=-10800
v4l2-ctl -d /dev/video0 --set-ctrl=power_line_frequency=2
v4l2-ctl -d /dev/video0 --set-ctrl=focus_absolute=40
